# Environment Configuration for Umami Azure Function

# Environment mode
NODE_ENV=development
KEYS_ENV=local
SECRET_PROVIDER=LOCAL
LOG_LEVEL=info

# Database Configuration
MONGODB=mongodb://localhost:27017/trovex

# Umami MySQL Configuration
UMAMI_DB_HOST=localhost
UMAMI_DB_PORT=3306
UMAMI_DB_NAME=umami
UMAMI_DB_USER=postgres
UMAMI_DB_PASSWORD=password
UMAMI_DB_SSL=false

# Umami API Configuration
UMAMI_API_BASE_URL=http://localhost:3000/api
UMAMI_API_USERNAME=admin
UMAMI_API_PASSWORD=password
UMAMI_WEBSITE_IDS=website1,website2

# Sync Configuration
INITIAL_SYNC_DAYS=7
SESSION_SYNC_WINDOW_HOURS=24
BATCH_SIZE=100
API_PAGE_SIZE=100

# Azure Key Vault Configuration (for production)
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_KEY_VAULT_TAG=production